# 咲想（sakisou）環境変数設定 - シンプル構成版

# Google Cloud Project Settings
GOOGLE_CLOUD_PROJECT=sakisou-dev
GCLOUD_PROJECT=sakisou-dev

# Vertex AI Settings (Gemini API)
GEMINI_MODEL_NAME=gemini-1.5-flash
GEMINI_LOCATION=us-central1

# Vertex AI Image Generation
VERTEX_AI_LOCATION=us-central1
IMAGE_MODEL_NAME=imagen-3.0-generate-001

# Firebase Configuration
FIREBASE_PROJECT_ID=sakisou-dev
FIREBASE_API_KEY=demo-key-for-emulator
FIREBASE_AUTH_DOMAIN=sakisou-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=sakisou-dev.appspot.com

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:5000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Image Generation Settings
MAX_IMAGE_SIZE=1024
IMAGE_QUALITY=high
DEFAULT_IMAGE_STYLE=realistic

# Firestore Settings
FIRESTORE_EMULATOR_HOST=localhost:8001
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Application Settings
APP_NAME=咲想
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=ja
SUPPORTED_LANGUAGES=ja,en

# Feature Flags
ENABLE_PUBLIC_GALLERY=true
ENABLE_SOCIAL_SHARING=true
ENABLE_ANALYTICS=false

# Mock Mode (開発用) - 実際のAI APIを使わずモックレスポンスを返す
USE_MOCK_API=true
